    <script>
      // Add 'scrolled' class to navbar when page is scrolled down
      window.addEventListener("scroll", function () {
        var navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.classList.add("scrolled");
        } else {
          navbar.classList.remove("scrolled");
        }
      });

      // Toggle navigation menu on hamburger click
      document.addEventListener("DOMContentLoaded", function () {
        var navLinks = document.getElementById("nav-links");
        var hamburger = document.getElementById("hamburger");

        hamburger.addEventListener("click", function () {
          navLinks.classList.toggle("open");
          hamburger.classList.toggle("open");
          document.body.classList.toggle("no-scroll");
        });
      });

      // Secret click event for logo
      document.addEventListener("DOMContentLoaded", function () {
        var secretElement = document.querySelector(".logo");
        var clickCount = 0;
        var maxClicks = 5; // Number of clicks required

        secretElement.addEventListener("click", function (event) {
          event.preventDefault(); // Prevent the default navigation behavior

          clickCount++;

          // Add the flash effect
          secretElement.classList.add("flash");

          // Remove the flash class after the animation duration
          setTimeout(function () {
            secretElement.classList.remove("flash");
          }, 300); // Match the duration of the flash-animation (0.3s)

          if (clickCount === maxClicks) {
            // Redirect to secret.html
            window.location.href = "secret.html";
          }
        });
      });

document.addEventListener("DOMContentLoaded", function () {
  const prevButton = document.querySelector(".prev");
  const nextButton = document.querySelector(".next");
  const carousel = document.querySelector(".testimonial-carousel");
  let startX, startY, isDragging = false, animationFrameId, velocityX = 0;

  prevButton.addEventListener("click", function () {
    carousel.scrollBy({
      top: 0,
      left: -300,
      behavior: "smooth",
    });
  });

  nextButton.addEventListener("click", function () {
    carousel.scrollBy({
      top: 0,
      left: 300,
      behavior: "smooth",
    });
  });

  // Touch event listeners
  carousel.addEventListener("touchstart", (e) => {
    startX = e.touches[0].clientX;
    startY = e.touches[0].clientY;
    isDragging = true;
    cancelAnimationFrame(animationFrameId); // Cancel any ongoing animation
  });

  carousel.addEventListener("touchmove", (e) => {
    if (!isDragging) return;
    
    const currentX = e.touches[0].clientX;
    const currentY = e.touches[0].clientY;
    const diffX = startX - currentX;
    const diffY = startY - currentY;

    if (Math.abs(diffX) > Math.abs(diffY)) {
      e.preventDefault(); // Prevent vertical scrolling
      
      // Scroll the carousel by the difference in touch positions
      startX = currentX; // Update startX to the current position for continuous scrolling
      carousel.scrollLeft += diffX;
      
      // Capture the velocity for momentum
      velocityX = diffX;
    }
  });

  carousel.addEventListener("touchend", () => {
    isDragging = false;
    // Continue scrolling based on the captured velocity
    applyMomentumScroll(velocityX);
  });

  // Wheel event listener for trackpad and mouse wheel scrolling
  carousel.addEventListener("wheel", (e) => {
    if (e.deltaX !== 0) {
      e.preventDefault(); // Prevent default scrolling behavior
      carousel.scrollLeft += e.deltaX; // Scroll horizontally based on vertical scroll amount
    }
  });

  function applyMomentumScroll(initialVelocity) {
    const deceleration = 0.91; // Adjust for smoothness, closer to 1 = slower stop
    let velocity = initialVelocity;

    const scrollStep = () => {
      if (Math.abs(velocity) > 0.3) { // Stop when the velocity is low enough
        carousel.scrollLeft += velocity;
        velocity *= deceleration; // Reduce the velocity gradually
        animationFrameId = requestAnimationFrame(scrollStep);
      }
    };
    
    scrollStep();
  }
});      
      // Language selector
      document.addEventListener('DOMContentLoaded', function() {
        const languageToggle = document.getElementById('languageToggle');
        const firstParagraph = document.getElementById('firstParagraph');
        const secondParagraph = document.getElementById('secondParagraph');
        const photographyButton = document.getElementById('photographyButton');
        const videographyButton = document.getElementById('videographyButton');
        const navLinks = document.querySelectorAll('.nav-links a');
        const bookingHeader = document.querySelector('.contact-section h2');

        const textContent = {
      en: {
        first: "Capture the essence of your cherished moments with professional photography and videography that faithfully narrate your story. Whether it be a solemn wedding ceremony, a corporate gathering, or a private celebration, I combine my creative acumen with technical proficiency to meticulously preserve every detail in exceptional quality.",
        second: "Click to Learn More...",
        photography: "Photography",
        videography: "Videography",
            booking: "Booking",
            instagram: "Instagram",
            reviews: "Reviews",
            bookEvent: "Book Me for an Event!",
        categoryText: "Choose a category below to see examples of my work",
            clientsSay: "What My Clients Say"
      },
      jp: {
        first: "プロの写真撮影とビデオ撮影で大切な瞬間の本質を捉え、あなたの物語を忠実に語ります。厳粛な結婚式、企業の集まり、またはプライベートな祝賀会など、創造的な洞察力と技術的な熟練を組み合わせて、優れた品質であらゆる詳細を細心の注意を払って保存します。",
        second: "詳細を見る...",
        photography: "写真",
        videography: "ビデオ",
            booking: "予約",
            instagram: "インスタグラム",
            reviews: "レビュー",
            bookEvent: "イベントの予約",
        categoryText: "以下のカテゴリを選択して、私の作品の例を見てください",
            clientsSay: "お客様の声"
      }
    };

   function updateTextContent(language) {
      firstParagraph.textContent = textContent[language].first;
      secondParagraph.textContent = textContent[language].second;
      photographyButton.textContent = textContent[language].photography;
      videographyButton.textContent = textContent[language].videography;
      document.getElementById('categoryText').textContent = textContent[language].categoryText;
          navLinks[0].textContent = textContent[language].photography;
          navLinks[1].textContent = textContent[language].videography;
          navLinks[2].textContent = textContent[language].booking;
          navLinks[3].textContent = textContent[language].instagram;
          navLinks[4].textContent = textContent[language].reviews;
          bookingHeader.textContent = textContent[language].bookEvent;
      document.querySelector('.testimonial-section h2 a').textContent = textContent[language].clientsSay; // Add this line
        }

    // Initial text content
    updateTextContent('en');

    // Event listener for language toggle
    languageToggle.addEventListener('click', function() {
      const currentLanguage = languageToggle.classList.contains('jp') ? 'jp' : 'en';
      const newLanguage = currentLanguage === 'en' ? 'jp' : 'en';
      languageToggle.classList.toggle('jp');
      languageToggle.classList.toggle('en');
      updateTextContent(newLanguage);
    });
  });
              function toggleLanguage(toggle) {
            toggle.classList.toggle('active');
        }
