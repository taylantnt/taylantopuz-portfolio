document.addEventListener("DOMContentLoaded", function () {
  var navLinks = document.getElementById("nav-links");
  var hamburger = document.getElementById("hamburger");

  hamburger.addEventListener("click", function () {
    navLinks.classList.toggle("open");
    hamburger.classList.toggle("open");
    document.body.classList.toggle("no-scroll");
  });

function openModal(videoUrl) {
    var modal = document.getElementById("videoModal");
    var iframe = document.getElementById("youtubePlayer");
    iframe.src = videoUrl;

    // Make the modal visible
    modal.style.display = "block";

    // Allow the transition effect to apply by using a short delay
    setTimeout(function () {
        modal.classList.add("show");
    }, 10); // Slight delay to ensure the display change happens first

    // Disable body scroll
    document.body.classList.add("no-scroll");
}

function closeModal() {
    var modal = document.getElementById("videoModal");
    var iframe = document.getElementById("youtubePlayer");
    iframe.src = "";

    // Remove the show class to start the fade-out transition
    modal.classList.remove("show");

    // Wait for the transition to complete before hiding the modal
    setTimeout(function () {
        modal.style.display = "none";
    }, 700); // Match the transition duration in the CSS

    // Re-enable body scroll
    document.body.classList.remove("no-scroll");
}

// Add the event listener for the close button
var closeBtn = document.querySelector(".modal .close");
closeBtn.addEventListener("click", closeModal);

// Close the modal if the user clicks outside of it
window.addEventListener("click", function (event) {
    var modal = document.getElementById("videoModal");
    if (event.target == modal) {
        closeModal();
    }
});
  
  const circles = document.querySelectorAll('.circle');
  circles.forEach(circle => {
    circle.addEventListener('click', function (event) {
      if (window.innerWidth <= 768) { // Check if the view is mobile
        if (circle.classList.contains('highlight')) {
          const video = circle.querySelector('video');
          const url = video.getAttribute('onclick').match(/'([^']+)'/)[1];
          openModal(url);
        } else {
          event.preventDefault();
          circles.forEach(c => c.classList.remove('highlight')); // Remove highlight from other circles
          circle.classList.add('highlight');
        }
      } else {
        const video = circle.querySelector('video');
        const url = video.getAttribute('onclick').match(/'([^']+)'/)[1];
        openModal(url);
      }
    });
  });
});
              
document.addEventListener('DOMContentLoaded', function () {
    // Language selector
    const languageToggle = document.getElementById('languageToggle');
    const inspirationHeader = document.querySelector('.inspiration h2');
    const inspirationParagraphs = document.querySelectorAll('.inspiration p');
    const navLinks = document.querySelectorAll('.nav-links a');

    const textContent = {
        en: {
            inspirationHeader: "Pouring My Heart and Soul into Every Frame",
            inspirationParagraphs: [
                "Every project I undertake is a labor of love, a testament to my dedication and passion for capturing the essence of each moment. From the initial concept to the final edit, I pour my heart and soul into every frame, ensuring that each video tells a unique and compelling story.",
                "If you are looking for a videographer who is committed to excellence and who will work tirelessly to bring your vision to life, I invite you to explore my portfolio below. Let's collaborate and create something truly special together.",
                "Check out my videography portfolio below and see for yourself the passion and creativity that goes into every project."
            ],
            navLinks: [
                "Photography",
                "Videography",
                "Booking",
                "Instagram",
                "Reviews"
            ]
        },
        jp: {
            inspirationHeader: "すべてのフレームに心と魂を注ぎ込む",
            inspirationParagraphs: [
                "私が取り組むすべてのプロジェクトは、愛の労働であり、各瞬間の本質を捉えることへの献身と情熱の証です。初期のコンセプトから最終編集まで、私はすべてのフレームに心と魂を注ぎ込み、各ビデオがユニークで魅力的なストーリーを語ることを保証します。",
                "卓越性にコミットし、あなたのビジョンを実現するために一生懸命働くビデオグラファーをお探しの場合は、以下のポートフォリオをご覧ください。一緒に本当に特別なものを作りましょう。",
                "以下のビデオグラフィーポートフォリオをチェックして、各プロジェクトに注がれる情熱と創造性をご覧ください。"
            ],
            navLinks: [
                "写真",
                "ビデオ",
                "予約",
                "インスタグラム",
                "レビュー"
            ]
        }
    };

    function updateTextContent(language) {
        inspirationHeader.textContent = textContent[language].inspirationHeader;
        inspirationParagraphs.forEach((p, index) => {
            p.textContent = textContent[language].inspirationParagraphs[index];
        });
        navLinks.forEach((link, index) => {
            link.textContent = textContent[language].navLinks[index];
        });
    }

    // Initial text content
    updateTextContent('en');

    // Event listener for language toggle
    languageToggle.addEventListener('click', function () {
        const currentLanguage = languageToggle.classList.contains('jp') ? 'jp' : 'en';
        const newLanguage = currentLanguage === 'en' ? 'jp' : 'en';
        languageToggle.classList.toggle('jp');
        languageToggle.classList.toggle('en');
        updateTextContent(newLanguage);
    });
});

function toggleLanguage(toggle) {
    toggle.classList.toggle('active');
}
    </script>
      
