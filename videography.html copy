// Custom cursor functionality
const cursor = {
  dot: document.querySelector(".cursor-dot"),
  outline: document.querySelector(".cursor-outline"),
  init: function () {
    document.addEventListener("mousemove", (e) => {
      this.dot.style.left = e.clientX + "px";
      this.dot.style.top = e.clientY + "px";
      this.outline.style.left = e.clientX + "px";
      this.outline.style.top = e.clientY + "px";
    });
  },
};

// Video modal functions
function openModal(projectId) {
  const modal = document.getElementById("projectModal");
  const project = projects[projectId];
  document.getElementById("modalTitle").textContent = project.title;
  document.getElementById("modalDescription").textContent = project.description;
  
  const modalVideo = document.getElementById("modalVideo");
  modalVideo.src = project.videoUrl;
  modalVideo.load(); // Force video to load new source
  
  modal.classList.add("active");
}

function closeModal() {
  const modal = document.getElementById("projectModal");
  const modalVideo = document.getElementById("modalVideo");
  modalVideo.pause(); // Pause video when closing modal
  modalVideo.src = ""; // Clear source
  modal.classList.remove("active");
}

function openVideoModal(projectId) {
  const modal = document.getElementById("videoModal");
  const project = videoProjects[projectId];
  document.getElementById("videoModalTitle").textContent = project.title;
  document.getElementById("videoModalDescription").textContent = project.description;
  
  // Set YouTube embed URL
  const youtubeFrame = document.getElementById("youtubeFrame");
  youtubeFrame.src = `https://www.youtube.com/embed/${project.youtubeId}?autoplay=1`;
  
  modal.classList.add("active");
}

function closeVideoModal() {
  const modal = document.getElementById("videoModal");
  const youtubeFrame = document.getElementById("youtubeFrame");
  youtubeFrame.src = ""; // Clear iframe source to stop video
  modal.classList.remove("active");
}

// Magnetic hover effect for navigation items
const magneticItems = document.querySelectorAll('.hover-magnetic');
magneticItems.forEach(item => {
  item.addEventListener('mousemove', function(e) {
    const bounds = this.getBoundingClientRect();
    const mouseX = e.clientX - bounds.left - bounds.width / 2;
    const mouseY = e.clientY - bounds.top - bounds.height / 2;
    
    this.style.setProperty('--mouse-x', `${mouseX * 0.2}px`);
    this.style.setProperty('--mouse-y', `${mouseY * 0.2}px`);
  });
  
  item.addEventListener('mouseleave', function() {
    this.style.transform = 'translate(0px, 0px)';
  });
});

// Activate video preview on hover for video tiles
const videoTiles = document.querySelectorAll('.video-tile');
videoTiles.forEach(tile => {
  const videoPreview = tile.querySelector('.video-preview');
  
  tile.addEventListener('mouseenter', function() {
    if (videoPreview.paused) {
      videoPreview.play();
    }
  });
  
  tile.addEventListener('mouseleave', function() {
    if (!videoPreview.paused) {
      videoPreview.pause();
      videoPreview.currentTime = 0;
    }
  });
});

// Initialize cursor when DOM is loaded
document.addEventListener("DOMContentLoaded", function() {
  cursor.init();
});

// Initialize cursor immediately as well (in case DOM is already loaded)
cursor.init();
      
