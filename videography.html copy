      function updateTextContent(language) {
        console.log(`Updating text content to ${language}`);
        document.getElementById('bookSessionTitle').textContent = textContent[language].bookSessionTitle;
        document.getElementById('bookSessionDescription').textContent = textContent[language].bookSessionDescription;
        document.getElementById('howItWorksTitle').textContent = textContent[language].howItWorksTitle;
        document.getElementById('howItWorksDescription').textContent = textContent[language].howItWorksDescription;
        document.getElementById('availableServicesTitle').textContent = textContent[language].availableServicesTitle;
        document.getElementById('eventPhotography').textContent = textContent[language].eventPhotography;
        document.getElementById('weddingVideography').textContent = textContent[language].weddingVideography;
        document.getElementById('corporateVideos').textContent = textContent[language].corporateVideos;
        document.getElementById('portraitSessions').textContent = textContent[language].portraitSessions;
        document.getElementById('customProjects').textContent = textContent[language].customProjects;
        document.getElementById('nameLabel').textContent = textContent[language].nameLabel;
        document.getElementById('emailLabel').textContent = textContent[language].emailLabel;
        document.getElementById('phoneLabel').textContent = textContent[language].phoneLabel;
        document.getElementById('serviceLabel').textContent = textContent[language].serviceLabel;
        document.getElementById('optionPhotography').textContent = textContent[language].optionPhotography;
        document.getElementById('optionVideography').textContent = textContent[language].optionVideography;
        document.getElementById('optionBoth').textContent = textContent[language].optionBoth;
        document.getElementById('optionCustom').textContent = textContent[language].optionCustom;
        document.getElementById('detailsLabel').textContent = textContent[language].detailsLabel;
        document.getElementById('requestQuoteButton').textContent = textContent[language].requestQuoteButton;
        document.getElementById('details').placeholder = textContent[language].placeholderText;
        document.getElementById('navPhotography').textContent = textContent[language].photography;
        document.getElementById('navVideography').textContent = textContent[language].videography;
        document.getElementById('navBooking').textContent = textContent[language].booking;
        document.getElementById('navInstagram').textContent = textContent[language].instagram;
        document.getElementById('navReviews').textContent = textContent[language].reviews;
      }

      // Initial text content
      updateTextContent('en');

      // Event listener for language toggle
      document.getElementById('languageToggle').addEventListener('click', function() {
        const currentLanguage = document.getElementById('languageToggle').classList.contains('jp') ? 'jp' : 'en';
        const newLanguage = currentLanguage === 'en' ? 'jp' : 'en';
        document.getElementById('languageToggle').classList.toggle('jp');
        document.getElementById('languageToggle').classList.toggle('en');
        updateTextContent(newLanguage);
      });
    });

    function toggleLanguage(toggle) {
      toggle.classList.toggle('active');
    }
